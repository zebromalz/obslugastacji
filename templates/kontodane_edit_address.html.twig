{% extends "layout.html.twig" %}

{% block content %}
<div class="row">
    <div class="col-md-1"></div>
    <div class="panel panel-info col-lg-10">

{% for a in address %}
        <div class="panel-heading">
            {% if a.a_id == 0 %}
            Dodanie Stacji
            {% else %}
            Edycja Stacji
            {% endif %}
        </div>

        <table class="table table-striped">
            <thead>
            <tr>
                <th>LP</th>
                <th>Miasto</th>
                <th>Kod Pocztowy</th>
                <th>Ulica</th>
                <th>Ulica Adres</th>
                <th>Nazwa</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
<tr>
    <form name="form_pass" id="form_pass" action="{{ app.url_generator.generate('kontodane_edit_address')}}" method="post">
    <th> - </th>
    <th><input type="text" class="form-control" id="a_name" name="a_city" placeholder="" value="{{ a.a_city|default('') }}" required=""></th>
    <th><input type="text" class="form-control" id="a_postcode" name="a_postcode" placeholder="" value="{{ a.a_postcode|default('') }}" required=""></th>
    <th><input type="text" class="form-control" id="a_street" name="a_street" placeholder="" value="{{ a.a_street|default('') }}" required=""></th>
    <th><input type="text" class="form-control" id="a_street_address" name="a_street_address" placeholder="" value="{{ a.a_street_address|default('') }}" required=""></th>
    <th><input type="text" class="form-control" id="a_name" name="a_name" placeholder="" value="{{ a.a_name|default('') }}" required=""></th>
    <th>
        <div class="text-center">
            <button type="submit" class="btn btn-default">

                {% if a.a_id == 0 %}
                    Dodaj
                {% else %}
                    Zapisz
                {% endif %}

            </button>
        </div>
    </th>

    <th>
        <th>

     </th>

        </th>
        <input type="hidden" value="{{ a.a_id|default(0) }}" name="a_id" id="a_id">
    </form>
     </tr>
{% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
