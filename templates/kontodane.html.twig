{% extends "layout.html.twig" %}

{% block content %}

    <div class="panel panel-info col-md-4">
        <div class="panel-heading">Dane klienta</div>

        {% for i in kontodane %}

            <form>
                <div class="form-group">
                    <label for="c_name">Imię</label>
                    <input type="text" class="form-control" id="c_name" value="{{ i.c_name }}">
                </div>
                <div class="form-group">
                    <label for="c_surname">Nazwisko</label>
                    <input type="text" class="form-control" id="c_surname" value="{{ i.c_surname }}">
                </div>
                <div class="form-group">
                    <label for="c_phone">Telefon</label>
                    <input type="tel" class="form-control" id="c_phone" value="{{ i.c_phone }}">
                </div>
                <div class="form-group">
                    <label for="c_name">Imię</label>
                    <input type="text" class="form-control" id="c_name" value="{{ i.c_name }}">
                </div>






                <button type="submit" class="btn btn-default">Submit</button>
            </form>
            {{ i.c_id }}/{{ i.c_name }}

        {% endfor %}

    </div>
    <div class="panel panel-info col-md-4">
        <div class="panel-heading">Karty</div>
    </div>
    </div>

{% endblock %}

{% block scripts %}
    <script>
    function showPassword() {

    var key_attr = $('#key').attr('type');

    if(key_attr != 'text') {

    $('.checkbox').addClass('show');
    $('#key').attr('type', 'text');

    } else {

    $('.checkbox').removeClass('show');
    $('#key').attr('type', 'password');

    }

    }
    </script>
{% endblock %}