{% extends "layout.html.twig" %}

{% block content %}
    <div class="container theme-showcase" role="main">

        <div class="page-header">
            <h1>Zamówienia</h1>
        </div>
        <div class="panel panel-default">
            <div class="panel-body">
                <button href="#neworder" type="button" class="btn btn-lg btn-success" data-toggle="modal">Utwórz nowe zamówienie</button>
                <form class="form-inline">
                    <div class="form-group">
                        <select class="form-control">
                            <option value="" selected="selected">Select a State</option>
                            <option value="AL">Alabama</option>
                            <option value="WY">Wyoming</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <select class="form-control">
                            <option value="" selected="selected">Select a State</option>
                            <option value="AL">Alabama</option>
                            <option value="WY">Wyoming</option>
                        </select>
                    </div>
                </form>
            </div>
        </div>
        <div class="row">
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>ID</th>
                    <th>Numer Własny</th>
                    <th>Numer Faktury</th>
                    <th>Adres Dostawy</th>
                    <th>Status Platnosci</th>
                    <th>Status Zamowienia</th>
                    <th>Data Utworzenia</th>
                </tr>
                </thead>
                <tbody>

                {% for i in orders %}
                <tr>
                    <th>{{ i.o_id }}</th>
                    <th>{{ i.o_name }}</th>
                    <th>FV/{{ i.o_f_id }}/{{ i.o_datetime| date("Y") }}</th>
                    <th>{{ i.o_shipto }}</th>
                    <th>
                        <span class="label label-success">Opłacone</span>
                    </th>
                    <th>
                        <span class="label label-success">Zrealizowane</span>
                    </th>
                    <th>{{ i.o_datetime }}</th>
                </tr>
                {% endfor %}

                </tbody>
            </table>
        </div>

    </div> <!-- /container -->

    <!-- /Modal Platnosci -->
    <div id="payments" class="modal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Opłać</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Czy zatwierdzasz platność</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary">Tak Zapłac</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Anuluj</button>
                </div>
            </div>
        </div>
    </div>
    <!-- /Modal Platnosci -->

    <!-- /Modal Nowego Zamowienia -->
    <div id="neworder" class="modal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Utwórz nowe zamówienie.</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form class="form-horizontal">
                        <fieldset>

                            <!-- Form Name -->
                            <legend id="form_title">Formularz zamówienia</legend>

                            <!-- Text input-->
                            <div class="form-group">
                                <label class="col-md-4 control-label" for="order_id" >Numer Zamówienia</label>
                                <div class="col-md-4">
                                    <input id="order_id" disabled="disabled" name="order_id" type="numer" placeholder="" class="form-control input-md">
                                </div>
                            </div>

                            <!-- Text input-->
                            <div class="form-group">
                                <label class="col-md-4 control-label" for="order_own_id" >Numer Własny</label>
                                <div class="col-md-4">
                                    <input id="order_own_id" name="order_own_id" type="text" placeholder="" class="form-control input-md">
                                </div>
                            </div>

                            <!-- Select Basic -->
                            <div class="form-group">
                                <label class="col-md-4 control-label" for="selectbasic">Adres Dostawy</label>
                                <div class="col-md-4">
                                    <select id="order_address" name="order_address" class="form-control" title="">
                                        {% for location in locations %}
                                            <option value="{{ location.a_id }}">{{ location.a_name }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                            </div>

                            <div class="container" style="margin-top:30px;">
                                <div class="row">
                                    <ul id="katalog">
                                        <li><a href="#">Katalog</a>


                                            {%  macro productMacro(array) %}
                                                {% import _self as pmacro %}
                                                <ul>
                                                    {% for product in array %}

                                                        {% if product.product_is_active %}
                                                        <li title="{{ product.product_desc }}">

                                                            {{ product.product_name }}

                                                            {% if not product.product_is_category %}

                                                            {{ (product.product_base_value/100)|number_format(2, '.', ',') }} zł / {{ product.product_base_size }}

                                                            <button id="{{ product.product_id }}" type="button" onclick="add_order_item({{ product.product_id }},1)" class="btn btn-xs btn-success">[ dodaj ]</button>

                                                            {% endif %}

                                                            {% if not product.children|default([]) is empty %}

                                                                  {{ pmacro.productMacro(product.children) }}

                                                            {% endif %}
                                                        </li>
                                                        {% endif %}
                                                    {% endfor %}
                                                </ul>
                                            {% endmacro %}

                                            {% import _self as pmacro2 %}
                                            {{  pmacro2.productMacro(products) }}

                                        </li>
                                    </ul>
                                    <p>

                                    </p>
                                </div>
                            </div>
                            <div class="row">
                                <table class="table">
                                    <thead>
                                    <tr>
                                        <th>LP</th>
                                        <th>Nazwa</th>
                                        <th>Cena</th>
                                        <th>Ilość</th>
                                        <th>Suma</th>
                                        <th>Akcja</th>
                                    </tr>
                                    </thead>
                                    <tbody id="zamowienie">
                                    <!-- Tutaj zostanie wczytane zamówienie -->
                                    </tbody>
                                </table>
                            </div>

                        </fieldset>
                    </form>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary">Zatwierdź</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Anuluj</button>
                </div>
            </div>
        </div>
    </div>
    <!-- /Modal Nowego Zamowienia -->

{% endblock %}

{% block scripts %}
    <script src="{{ asset('js/treeview.js') }}"></script>
    <script>
        $('#katalog').treed({openedClass:'glyphicon-folder-open', closedClass:'glyphicon-folder-close'});

        $('#neworder').on('show.bs.modal', function (e) {
            $.post("https://obslugastacji.ddns.net/index.php/zamowienia_show",{},function(data,status){$("#zamowienie").html(data)});

            //if (!data) return e.preventDefault() // stops modal from being shown
        });

        function add_order_item(i_id,i_amount) {
            $("#zamowienie").html('<tr><td colspan=6><center><img src="{{ asset('assets/img/loading.gif') }}"></center></td></tr> ');
            $.post("https://obslugastacji.ddns.net/index.php/zamowienia_add_item", {
                item_id: i_id,
                item_count: i_amount
            }, function (data, status) {

                setTimeout(function () {
                    $.post("https://obslugastacji.ddns.net/index.php/zamowienia_show", {}, function (data, status) {
                        $("#zamowienie").html(data)
                    });
                    $.post("https://obslugastacji.ddns.net/index.php/zamowienia_show", {}, function (data, status) {
                        $("#zamowienie").html(data)
                    });
                }, 100);

            });
        }

        function remove_order_item(i_id){
            $("#zamowienie").html('<tr><td colspan=6><center><img src="{{ asset('assets/img/loading.gif') }}"></center></td></tr> ');
            $.post("https://obslugastacji.ddns.net/index.php/zamowienia_add_item", {
                item_id: i_id,
                remove : i_id
            }, function (data, status) {

                setTimeout(function () {
                    $.post("https://obslugastacji.ddns.net/index.php/zamowienia_show", {}, function (data, status) {
                        $("#zamowienie").html(data)
                    });
                }, 100);

            });

        }

    </script>
{% endblock %}